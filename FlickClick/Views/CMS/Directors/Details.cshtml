@model IEnumerable<FlickClick.Models.DirectorModel>

@{
    ViewData["Title"] = "Admin Panel: Instruktører";
    ViewData["Stylesheet"] = "/css/cms.css";
}

<h1>Instruktør liste</h1>

<div>
    <h4>DirectorModel</h4>
    <hr />
    <div class="contentContainter">
        <div>
            <a asp-action="Index">Tilbage til instruktør menuen</a>
        </div>
        @foreach (var item in Model)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.directorID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.directorID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.firstName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.firstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.lastName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.lastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.dateOfBirth)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.dateOfBirth)
                </dd>
            </dl>
            <div class="listForm">
                <form action="Edit/@item.directorID" method="get">
                    <input type="submit" name="submit" value="Rediger">
                </form>
                <form action="Delete/@item.directorID" method="get">
                    <input type="submit" name="submit" value="Slet">
                </form>

            </div>
        }
        </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
