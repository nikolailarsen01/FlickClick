@model IEnumerable<FlickClick.Models.ContactModel>

@{
    ViewData["Title"] = "Admin Panel: Messages";
    ViewData["Stylesheet"] = "/css/cms.css";
    Layout = "~/Views/Shared/_CmsLayout.cshtml";
}

<h1>Index</h1>

<div>
    <h4>Received Messages</h4>
    <hr />
    @foreach (var item in Model)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => item.ID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.ID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => item.contactName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.contactName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => item.contactMail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.contactMail)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => item.message)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.message)
            </dd>
        </dl>
        <div class="listForm">
            <form asp-action="Delete" asp-route-id="@item.ID" method="get">
                <input type="submit" name="submit" value="Delete">
            </form>
        </div>
    }

</div>
<div>
    <a asp-action="Index" asp-controller="Cms">Back to Admin Panel</a>
</div>
