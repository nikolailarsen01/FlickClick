@model IEnumerable<FlickClick.Models.UserModel>

@{
    ViewData["Title"] = "Admin Panel: Users";
    ViewData["Stylesheet"] = "/css/cms.css";
    Layout = "~/Views/Shared/_CmsLayout.cshtml";
}


<div>
    <div class="contentContainter">
        <h1>
            Users
        </h1>
        <div class="sideLinks">
            <a asp-controller="Cms" asp-action="Index">Back to admin panel</a>
        </div>
       @foreach (var item in Model)
        {
            <dl class="row">
                <dt class="col-sm-2" >
                    @Html.DisplayNameFor(modelItem => item.userID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.userID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.firstName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.firstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.lastName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.lastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.postalCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.postalCode)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.streetName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.streetName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.houseNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.houseNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.phoneNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.phoneNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.userSince)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.userSince)
                </dd>
            </dl>
            <div class="listForm">
                <form asp-action="Delete" asp-route-id="@item.userID" method="get">
                    <input type="submit" name="submit" value="Delete">
                </form>
            </div>
        }
    </div>
</div>

