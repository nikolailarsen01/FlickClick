@model HomeModel

@{
    ViewData["Stylesheet"] = "/css/index.css";
}
<div class="movie-banners">
    <div class="movie-banners-header">
        <p class="movie-banners-header-item">LATESTS TRAILERS</p>
        <a class="movie-banners-header-item right ul" href="dinmor.lol">Show all</a>
    </div>
    <div class="movie-banners-items">
        @foreach (var item in Model.releaseDateSort)
        {
            <div class="movie-banners-item">
                <div class="content">
                    <a asp-controller="View" asp-action="Movie" asp-route-id="@item.movieID">
                        <div class="content-overlay"></div>
                        <img class="content-image" src="@item.picturePath">
                        <div class="content-details fadeIn-bottom">
                            <h3 class="content-title">Play Trailer</h3>
                            <img class="play-button" src="https://i.imgur.com/vXXQugU.png" />
                            <p class="content-text">@item.title</p>
                        </div>
                    </a>
                </div>
                <div class="content-comments">
                    <p class="content-comments-count">@item.commentsCount</p>
                    <img class="content-comments-img" src="~/assets/images/commentBubble.png" />
                </div>
            </div>
        }
    </div>
</div>

