@model IEnumerable<FlickClick.Models.GenreModel>  
@{
    ViewData["Title"] = "Admin Panel: Genre";
    ViewData["Stylesheet"] = "/css/cms.css";
}

<div>
    <div class="contentContainter">
        <h1>
            Genre
        </h1>
        <div class="sideLinks">
            <a asp-controller="Cms" asp-action="Index">Back to admin panel</a>
            <a asp-action="Create">Add genre</a>
        </div>
        @foreach (var item in Model)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.genreID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.genreID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.genreName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.genreName)
                </dd>
            </dl>
            <div class="listForm">
                <form asp-action="Edit" asp-route-id="@item.genreID" method="get">
                    <input type="submit" name="submit" value="Edit">
                </form>
                <form asp-action="Delete" asp-route-id="@item.genreID" method="get">
                    <input type="submit" name="submit" value="Delete">
                </form>

            </div>
        }
    </div>
</div> 