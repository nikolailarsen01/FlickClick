@model FlickClick.Models.GenreModel

@{
    ViewData["Title"] = "Edit";
    ViewData["Stylesheet"] = "/css/cms.css";
}

<h1>Rediger</h1>

<h4>Genre</h4>
<hr />
<div class="contentContainter">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="genreID" class="control-label"></label>
                    <input asp-for="genreID" disabled class="form-control" />
                    <span asp-validation-for="genreID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="genreName" class="control-label"></label>
                    <input asp-for="genreName" type="text" class="form-control" required />
                    <span asp-validation-for="genreName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Gem" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Tilbage til listen</a>
    </div>
</div>
