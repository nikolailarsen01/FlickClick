@model IEnumerable<FlickClick.Models.CommentModel>

@{
    ViewData["Title"] = "Admin Panel: Comments";
    ViewData["Stylesheet"] = "/css/cms.css";
    Layout = "~/Views/Shared/_CmsLayout.cshtml";
}

<div>
    <div class="contentContainter">
        <h1>
            Comments
        </h1>
        <div class="sideLinks">
            <a asp-controller="Cms" asp-action="Index">Back to admin panel</a>
        </div>
        @foreach (var item in Model)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.ID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.ID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.userID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.userID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.username)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.username)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.dateTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.dateTime)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.comment)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.comment)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.movieID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.movieID)
                </dd>
            </dl>
            <div class="listForm">
                <form asp-action="Delete" asp-route-id="@item.ID" medtod="get">
                    <input type="submit" name="submit" value="Delete">
                </form>
            </div>
        }
    </div>
</div>