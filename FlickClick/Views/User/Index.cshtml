@model FlickClick.Models.UserModel;
@{
    ViewData["Stylesheet"] = "/css/user.css";
    ViewData["js"] = "/js/user.js";

}

<img class="user-img" src="@Model.profilePicPath" alt="Image not found" onerror="this.onerror=null;this.src='assets/images/placeholder-image.png';" />
<form method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Index">
    <span>Vælg billede:</span>
    <input type="file" name="postedFiles" accept="image/*"/>
    <input type="submit" value="Upload" style="text-decoration: underline;"/>
    <br />
    <span style="color:green">@Html.Raw(ViewBag.Message)</span>
</form>

<table class="table">
    <tr>
        <th>
            Firstname
        </th>
        <th>
            Lastname
        </th>
        <th>
            Email
        </th>
        <th>
            Address
        </th>
        <th>
            Phonenumber
        </th>
        <th>
            User since
        </th>
        <th></th>
    </tr>
    <tr>
        <td>
            @Html.DisplayFor(Model => Model.firstName)
        </td>
        <td>
            @Html.DisplayFor(Model => Model.lastName)
        </td>
        <td>
            @Html.DisplayFor(Model => Model.email)
        </td>
        <td>
            @Model.streetName @Model.houseNumber, @Model.postalCode
        </td>
        <td>
            @Model.phoneNumber
        </td>
        <td>
            @Model.userSince.ToString("dd-MM-yyyy")
        </td>
        <td>
            <a asp-controller="User" asp-action="Edit">Edit</a>
        </td>
    </tr>
</table>


<h3>Comments</h3>
<table id="Comments" class="table">
</table>