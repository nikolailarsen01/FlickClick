@model FlickClick.Models.UserCreateModel

@{
    ViewData["Stylesheet"] = "/css/register.css";
}

<h1>Register</h1>
<hr />
<div class="row register-form">
    <div class="col-md-4">
        <form name="registerForm" asp-action="ValidateRegister" asp-controller="User" onsubmit="return validateForm(this)" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="firstName" class="control-label">Firstname</label>
                <input asp-for="firstName" name="firstName" class="form-control" maxlength="32" required />
                <span asp-validation-for="firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastName" class="control-label">Lastname</label>
                <input asp-for="lastName" name="lastName" class="form-control" maxlength="32" required />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label">Email</label>
                <input asp-for="email" name="email" type="email" class="form-control" maxlength="64" required />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="confirmEmail" class="control-label">Confirm email</label>
                <input asp-for="confirmEmail" name="confirmEmail" type="email" class="form-control" maxlength="64" required />
                <span asp-validation-for="confirmEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="postalCode" class="control-label">Postal code</label>
                <input asp-for="postalCode" name="postalCode" class="form-control" required />
                <span asp-validation-for="postalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="streetName" class="control-label">Street name</label>
                <input asp-for="streetName" name="streetName" class="form-control" required />
                <span asp-validation-for="streetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="houseNumber" class="control-label">House number</label>
                <input asp-for="houseNumber" name="houseNumber" type="number" class="form-control" required />
                <span asp-validation-for="houseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label">Password</label>
                <input asp-for="password" type="password" name="password" class="form-control" maxlength="64" required />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="confirmPassword" class="control-label">Confirm Password</label>
                <input asp-for="confirmPassword" type="password" name="confirmPassword" class="form-control" required />
                <span asp-validation-for="confirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phoneNumber" class="control-label">Phonenumber</label>
                <input asp-for="phoneNumber" maxlength="8" name="phoneNumber" type="number" class="form-control" required />
                <span asp-validation-for="phoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="profilePic" class="control-label"></label>
                <input asp-for="profilePic" type="file" class="form-control" accept="image/*" required />
                <span asp-validation-for="profilePic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign up" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
