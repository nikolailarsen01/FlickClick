@model IEnumerable<FlickClick.Models.WriterModel>
@{
    ViewData["Title"] = "Admin Panel: Writers";
    ViewData["Stylesheet"] = "/css/cms.css";
    Layout = "~/Views/Shared/_CmsLayout.cshtml";
}

<div>
    <div class="contentContainter">
        <h1>
            Writers
        </h1>
        <div class="sideLinks">
            <a asp-controller="Cms" asp-action="Index">Back to admin panel</a>
            <a asp-action="Create">Add writer</a>
        </div>
        @foreach (var item in Model)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.writerID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.writerID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.firstName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.firstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.lastName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.lastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.dateOfBirth)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.dateOfBirth)
                </dd>
            </dl>
            <div class="listForm">
                <form asp-action="Edit" asp-route-id="@item.writerID" method="get">
                    <input type="submit" name="submit" value="Edit">
                </form>
                <form asp-action="Delete" asp-route-id="@item.writerID" method="get">
                    <input type="submit" name="submit" value="Delete">
                </form>
            </div>
        }
    </div>
</div> 